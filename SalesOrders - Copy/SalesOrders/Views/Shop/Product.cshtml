@model SalesOrders.Models.Product

    <div id="productBox">

        <h3 class="productName">@Html.DisplayFor(Model => Model.ProductName)</h3>

        <div class="product" style="width: 30%; float: left;">
            <img src="@Url.Content(Model.ProductImage)" width="200" height="150" alt="@Model.ProductName" title="@Model.ProductName" />
        </div>

        <div class="productInfo">

            <p>$@Html.DisplayFor(Model => Model.ProductPrice)</p>
            <p>@Html.DisplayFor(Model => Model.ProductQty) in stock</p>
            <p>@Html.DisplayFor(Model => Model.ProductDescShort)</p>

            <div class="itemButtons">
                @Html.ActionLink("More Info", "Index", "ItemDetails",
                             new { id = Model.ProductID }, new { id = "ProductID" })

                <br />

                @using(Html.BeginForm("AddToCart", "ShoppingCart"))
                {

                    @Html.HiddenFor(x => x.ProductID)
                    @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                    
                    <input type="submit"
                           value="Add to Cart" />
                }

            </div>
        </div>
    </div>